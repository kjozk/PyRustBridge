{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rust: Build Debug",
            "type": "shell",
            "command": "cargo build",
            "options": {
                "cwd": "${workspaceFolder}/rustlib"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build Rust Debug version"
        },
        {
            "label": "Rust: Build Release",
            "type": "shell",
            "command": "cargo build --release",
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build Rust Release version"
        }
    ]
}
