{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File with Native Debugging",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Rust: LLDB Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/rustlib.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        }
    ]
}
